<h1><%= @book.title %></h1>

<%= image_tag @book.image, :class => 'feature' %>

<ul>
<li>Title: <%= @book.title %></li>
<% if @book.author.present?%>
    <li>Author: <%= link_to @book.artist.name, @book.artist %>
<% end %>
<li>Year released: <%= @book.year %></li>
</ul>

<div class="controls">
    <%= link_to 'Edit book', edit_book_path(@book) %>
    <%= link_to 'Delete book', @book, :method => 'delete', :data => { :confirm => 'Are you sure' } %>
</div>
