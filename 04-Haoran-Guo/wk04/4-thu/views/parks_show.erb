<h1><%= @park["name"] %></h1>
<h3>Location:</h3>
<h4><%= @park['location'] %></h4>

<h3>Recommended?</h3>
<% if @park['recommend'] == 1 %>
        <h4><%="YES 😁" %></h4>
    <% else %>
        <h4><%= "NO 😭" %></h4>
<% end %>

<% unless @park['image'].nil? || @park['image'].empty? %>
    <img class="feature" src="<%= @park['image'] %>" alt="<%= @park['name'] %>">
<% end %>

<div class="controls">
    <a href="/parks/<%= @park['id'] %>/edit">Edit Park</a>
    <a href="/parks/<%= @park['id'] %>/delete">Delete Park</a>

</div>