<h1><%= @mountain.name %></h1>

<%= image_tag @mountain.image, :class => "feature" if @mountain.image.present? %>

<ul>
    <li>Name: <%= @mountain.name %></li>
    <li>Image: <%= @mountain.image %></li>
    <li>Country: <%= @mountain.country %></li>
    <li>Height: <%= @mountain.height %></li>
    <li>Annual Death Rate: <%= @mountain.annual_death_rate %></li>
    <li>Danger Rating: <%= @mountain.danger_rating %></li>
</ul>

<div class="controls">
    <%= link_to "Edit mountain", edit_mountain_path(@mountain.id) %>
    <%= link_to "Delete mountain", mountain_path(@mountain.id), :method => 'delete' %>
</div>