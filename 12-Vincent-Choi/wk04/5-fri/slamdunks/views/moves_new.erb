<h1>New Move</h1>

<form action="/moves" method="post">
    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Type:
        <input name="type" required>
    </label>

    <label>
        Description:
        <input name="description" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <button>Create Move</button>
</form>