<h1>Edit mountain</h1>

<form action="<%= mountains_path(@mountain.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @mountain.name %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @mountain.image %>">
    </label>

    <label>
        Country:
        <input type="number" name="country" value="<%= @mountain.country %>">
    </label>

    <label>
        Height:
        <input type="number" name="height" value="<%= @mountain.height %>">
    </label>

    <label>
        Annual Death Rate:
        <input type="number" name="annual_death_rate" value="<%= @mountain.annual_death_rate %>">
    </label>

    <label>
        Danger Rating:
        <input type="number" name="danger_rating" value="<%= @mountain.danger_rating %>">
    </label>

    <button>Update Mountain</button>
</form>