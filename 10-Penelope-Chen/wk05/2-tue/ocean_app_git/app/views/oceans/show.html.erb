<h1><%= @ocean.name %></h1>

<%= image_tag @ocean.image, :class => 'feature' if @ocean.image.present? %>

<ul>
    <li>Name: <%= @ocean.name %></li>
    <li>Maxdepth: <%= @ocean.maxdepth %></li>
</ul>

<div class="controls">
    <%= link_to "Edit ocean", edit_ocean_path(@ocean.id) %>
    <%= link_to "Delete ocean", ocean_path(@ocean.id), :method => 'delete' %>
</div>