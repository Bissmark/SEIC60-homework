<div>
    <%= link_to 'Brands list', brands_path, class: 'navigation' %>
</div>

<h2>All Headphones</h2>

<%= link_to button_tag("Add headphone", class: 'add-btn'), new_headphone_path %>

<% @headphones.each do |headphone| %>
    <div>
        <% if headphone.image.present? %>
            <%= link_to image_tag(headphone.image, :class => 'image-index'), headphone %>
        <% end %>
        <h3><%= link_to headphone.name, headphone %></h3>
    </div>
<% end %>
