<h1>All Movies</h1>

<% @movies.each do |movie| %>
<p>
    <%= image_tag movie.image, :class => 'thumb' if movie.image.present? %>
    <ul>
        <li>Name: <%= link_to movie.name, movie_path(movie.id) %></li>
        <li>Genre: <%= movie.genre %></li>
    
        <li>Rating: <%= movie.rating %></li>
    </ul>
</p>
<% end %>


