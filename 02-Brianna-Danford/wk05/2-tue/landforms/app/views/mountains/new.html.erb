<h1>New mountain</h1>

<form action="<%= mountains_path %>" method="post">

    <label>
        Name:
        <input name="name" required>
    </label>

    <label>
        Image:
        <input type="url" name="image">
    </label>

    <label>
        Elevation:
        <input type="number" name="elevation">
    </label>

    <label>
        Location:
        <input type="text" name="location">
    </label>

    <button>Create</button>
</form>