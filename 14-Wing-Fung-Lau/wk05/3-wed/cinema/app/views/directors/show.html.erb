<h1><%= @director.name %></h1>

<%= image_tag @director.image, :class => 'feature' if @director.image.present? %>
<p>Nationality: <%= @director.nationality %></p>
<p>Date of birth: <%= @director.dob if @director.dob.present? %></p>
   
<p style="margin-bottom: 1px;">List of movies</p>
<div class="movielist">
<% @director.movies.each do |movie| %>
       <div class="frame"><%= link_to image_tag(movie.image, :title => movie.title, :class => 'thumb'), movie %></div>
<% end %>
</div>

<div class="controls">
    <%= link_to 'Edit director', edit_director_path(@director) %>
    <%= link_to 'Delete director', @director, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
