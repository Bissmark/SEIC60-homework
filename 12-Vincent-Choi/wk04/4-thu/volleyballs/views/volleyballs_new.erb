<h1>New Volleyball Player</h1>

<form action="/volleyballs" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @volleyball["name"] %>">
    </label>

    <label>
        Country:
        <input name="country" value="<%= @volleyball["country"] %>">
    </label>

    <label>
        Position:
        <input name="position" value="<%= @volleyball["position"] %>">
    </label>

    <label>
        Number:
        <input type="number" value="<%= @volleyball["number"] %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @volleyball["image"] %>">
    </label>
    <button>Create Volleyball Player</button>
</form>